<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LL_1"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="@color/white"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_recycle_chatlist"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/black"
            android:scaleType="centerCrop"
            android:src="@drawable/before_add_profile_img"
            android:layout_gravity="center_vertical"
            app:civ_border_width="1sp"
            app:civ_border_color="#1B1A1A"
            android:clickable="true"
            android:focusable="true"
            ></de.hdodenhof.circleimageview.CircleImageView>
        <!-- Space -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/black"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_recycle_chatroom_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="취업 준비 방"
                    android:textColor="@color/white"
                    android:background="@color/black"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tv_recycle_chatroom_member_cnt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="(3/15)"
                    android:textColor="@color/white"
                    android:background="@color/black"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_recycle_chatroom_current_message"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="최근 채팅 내용"
                android:textColor="@color/white"
                android:background="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">
            <!-- Space -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/black"/>
            <!-- Vote_Image -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/vote_box_btn"
                android:background="@color/white"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black"/>
</LinearLayout>