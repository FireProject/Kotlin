<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.BurningUp">
    <!-- 인터넷 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_burning_up"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_burning_up_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity android:name="com.example.BurningUp.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
        </activity>

        <activity android:name="com.example.BurningUp.MainActivity"></activity>
        <activity android:name="com.example.BurningUp.RegisterActivity"></activity>
        <activity android:name="com.example.BurningUp.LoginActivity"></activity>

    </application>

</manifest>